    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_pager_ID"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_pager_header_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    tools:text="Эффективность и рентабельность" />
<!--                android:fontFamily="@{settings.typeface}"-->
<!--                android:textColor="@{settings.primaryTextColor}"-->

                <TextView
                    android:id="@+id/textView_pager_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="13sp"
                    tools:text="Эффективность и рентабельность
                            Эффективность и рентабельность
                            Эффективность и рентабельность
                            Эффективность и рентабельность
                            Эффективность и рентабельность
                            Эффективность и рентабельность" />
<!--                android:fontFamily="@{settings.typeface}"-->

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

